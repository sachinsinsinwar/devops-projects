pipeline {
  agent any
  options { timestamps() }
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }
    stage('Unit Tests') {
      steps {
        dir('apps/demo_api') {
          sh '''
            python3 -m venv .venv
            . .venv/bin/activate
            pip install -r requirements.txt
            pytest -q
          '''
        }
      }
    }
    stage('Docker Build') {
      steps {
        dir('apps/demo_api') {
          sh 'docker build -t demo-api:jenkins .'
        }
      }
    }
  }
}
